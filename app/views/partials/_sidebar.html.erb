<div id="sidebar">
	<ul>
		<li>
			<div id="search">
				<%= search_form_for @q do |f| %>
					<%= f.search_field :title_or_body_cont %>
					<%= f.submit "Go" %>
				<% end %>
			</div>
			<div style="clear: both;">&nbsp;</div>
		</li>
		<li>
			<h2>Get Rails</h2>
			<p>You can download Ruby and/or Ruby on Rails for free right <a style="color:#D93544" href="http://rubyonrails.org/download">Here</a>
			</p>
		</li>
		<li>
			<h2>Categories</h2>
			<ul>
				<% all_categories.each do |cat| %>
					<li><%= link_to cat.name,category_path(:id => cat.id) %></li>
				<% end %>
			</ul>
		</li>
		<li>
			<h2>Blog Posts</h2>
			<ul>
				<% all_posts.each do |post| %>
					<li><%= link_to post.title,post_path(:id => post.id) %></li>
				<% end %>
			</ul>
		</li>
	</ul>
</div> <!-- end #sidebar -->