<div id="sidebar">
	<ul>
		<li>
			<div id="search">
				<form method="get" action="#">
					<div>
						<input type="text" name="s" id="search-text" value="" placeholder="Search here" />
						<input type="submit" id="search-submit" value="GO" />
					</div>
				</form>
			</div>
			<div style="clear: both;">&nbsp;</div>
		</li>
		<li>
			<h2>Get Rails</h2>
			<p>You can download Ruby and/or Ruby on Rails for free right <a style="color:#D93544" href="http://rubyonrails.org/download">Here</a>
			</p>
		</li>
		<li>
			<h2>Categories</h2>
			<ul>
				<% all_categories.each do |cat| %>
					<li><%= link_to cat.name,category_path(:id => cat.id) %></li>
				<% end %>
			</ul>
		</li>
		<li>
			<h2>Blog Posts</h2>
			<ul>
				<% all_posts.each do |post| %>
					<li><%= link_to post.title,post_path(:id => post.id) %></li>
				<% end %>
			</ul>
		</li>
	</ul>
</div> <!-- end #sidebar -->