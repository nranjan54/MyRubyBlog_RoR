
	<h1 style="color: #ffffff; padding-bottom: 10px"><%= @category.name  %></h1>
	<% if @posts.each do |post| %>
		<div class="post">
		<h2 class="title"> <%= link_to post.title,post %> </h2>
		<div class="entry"><p> <%=  post.body %> </p></div>
		<div class="byline">
			<p class="meta">May 07, 2012 Posted by <a href="#">Someone</a></p>
			<p class="links"><a href="post.html">Read More</a> BLAH BLAH BLAH</p>
		</div>
		</div>
	<% end.empty? %>
		<p style="color: #ffffff">Sorry, their is no posts in this category</p>
	<% end %>
	<%= link_to "Back to Categories", categories_path %>




